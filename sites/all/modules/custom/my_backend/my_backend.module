}

/*
 * custom block view
 */
function my_backend_block_view($delta = '') {

  $block = array();

  switch ($delta) {

  case 'festival_menu_block': 
      $block['subject'] = '';
      $block['content'] =custem_festival_menu_block_content();
      break;
  
  case 'complex_calender_view': 
        $block['subject'] = '';
        $block['content'] = complex_calender_view_block_content();
        break;

  }

  return $block;
}

