function my_backend_block_info() {

  $blocks = array();

  $blocks['festival_menu_block'] = array(
    'info' => t('festival menu'), 
  );
  return $blocks;
}

function my_backend_block_view($delta = '') {

  $block = array();

  switch ($delta) {

  case 'festival_menu_block': 
      $block['subject'] = '';
      $block['content'] =custem_festival_menu_block_content();
      break;

  }

  return $block;
}
